# Enables or disables n8n login protection via basic authentication (true/false).
# Choose this value based on your security preference for local or deployed environments.
N8N_BASIC_AUTH_ACTIVE=YOUR_VALUE_HERE

# Username for signing in to n8n when basic authentication is enabled.
# Create this username yourself (for example, an admin username you define).
N8N_BASIC_AUTH_USER=YOUR_VALUE_HERE

# Password for signing in to n8n when basic authentication is enabled.
# Create a strong password yourself (for example, from a password manager).
N8N_BASIC_AUTH_PASSWORD=YOUR_VALUE_HERE

# Hostname where n8n runs.
# Use localhost for local development, or your server/domain host for deployment.
N8N_HOST=YOUR_VALUE_HERE

# Port exposed by n8n (default is 5678).
# Choose an available port from your local machine or hosting environment.
N8N_PORT=YOUR_VALUE_HERE

# Protocol used by n8n (http or https).
# Set this based on whether TLS/SSL is configured in your environment.
N8N_PROTOCOL=YOUR_VALUE_HERE

# OpenAI API key used for RSS summary generation.
# Get this from https://platform.openai.com/api-keys.
OPENAI_API_KEY=YOUR_VALUE_HERE

# Database type used by n8n for persistence.
# Keep this set to postgresdb for this project architecture.
DB_TYPE=YOUR_VALUE_HERE

# PostgreSQL host for the n8n database connection.
# Use your Docker service name (for example, postgres) or localhost for local DB access.
DB_POSTGRESDB_HOST=YOUR_VALUE_HERE

# PostgreSQL port for the n8n database connection (default is 5432).
# Use the port configured for your PostgreSQL server/container.
DB_POSTGRESDB_PORT=YOUR_VALUE_HERE

# PostgreSQL database name used by n8n.
# Create and use a database name from your PostgreSQL setup.
DB_POSTGRESDB_DATABASE=YOUR_VALUE_HERE

# PostgreSQL username used by n8n.
# Use a PostgreSQL user you created with access to the target database.
DB_POSTGRESDB_USER=YOUR_VALUE_HERE

# PostgreSQL password used by n8n.
# Use the password for your PostgreSQL user from your DB setup.
DB_POSTGRESDB_PASSWORD=YOUR_VALUE_HERE

# Port used by the dashboard UI service (default is 3000).
# Choose an available local/deployment port for the UI.
UI_PORT=YOUR_VALUE_HERE

# Recipient email address for sending the generated digest.
# Use the email inbox where you want to receive the digest reports.
DIGEST_EMAIL_TO=YOUR_VALUE_HERE

# Cron schedule for digest generation (for example, 0 9 * * * for 9:00 AM daily).
# Build and validate your cron expression using a tool like https://crontab.guru.
DIGEST_SCHEDULE=YOUR_VALUE_HERE
